<p>This is the cart section.</p>
{% for item in cart.items %}
  <p>
    {{ item.title }}
    {{ item.quantity }}
  </p>

  <a href="{{ item.url_to_remove }}">Remove</a>
  <input
    type="text"
    name="updates[]"
    value="{{ item.quantity }}"
  >
  <input type="submit" value="Update cart">
{% endfor %}
